{

    "workbench.sideBar.location": "right",

    // minimap
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.scale": 1,
    "editor.minimap.side": "left",

    // git
    "git.blame.editorDecoration.enabled": false,


    "diffEditor.renderGutterMenu": false,
    "scm.diffDecorations": "none",
    "editor.lightbulb.enabled": "off",
    "files.insertFinalNewline": true,

    "editor.matchBrackets": "near",
    "testing.gutterEnabled": false,

    "editor.parameterHints.enabled": false,
    "editor.cursorBlinking": "expand",


    "scm.compactFolders": false,

    "search.decorations.badges": false,
    "git.decorations.enabled": false,

    "workbench.tips.enabled": false,


    // zoom
    "window.zoomLevel": 0.8,

    // font family
    "editor.fontFamily": "jetBrainsMono Nerd Font",
    "editor.fontSize": 14,



    "editor.colorDecorators": false,
    "editor.codeLens": false,
    "editor.links": false,

    "files.trimTrailingWhitespace": true,
    "editor.renderWhitespace": "none",


    "workbench.colorCustomizations": {

        "editor.lineHighlightBackground":"#00000000",
        "editor.lineHighlightBorder":"#00000000",

        "editor.selectionBackground":"default",

        "editor.wordHighlightBackground":"#ffcc0000",

        "editorCursor.background":"#000000",
        "editorBracketMatch.border":"#ff336600",
        "editorBracketMatch.background":"#ff336650",

        "editorLineNumber.activeForeground":"#ffcc00",
        "editorLineNumber.foreground":"#ff3366",
        "editorLineNumber.dimmedForeground":"#380a53",




        "editorGroup.border":"#00000000",
        "sideBar.border":"#00000000",
        "panel.border":"#00000000",

        "widget.border":"#00000000",
        "editorWidget.background":"#000000",

        "scrollbarSlider.activeBackground":"#000000",
        "scrollbar.shadow":"#000000",
        "scrollbarSlider.background":"#000000",

        "minimap.background":"#00000000",
        "minimapSlider.activeBackground":"#00000000",
        "minimapSlider.hoverBackground":"#00000000",
        "minimapSlider.background":"#00000000",
        "minimap.selectionHighlight":"#00000000",
        "minimap.chatEditHighlight":"#00000000",
        "minimap.errorHighlight":"#00000000",
        "minimap.findMatchHighlight":"#00000000",
        "minimap.infoHighlight":"#00000000",
        "minimap.warningHighlight":"#00000000",
        "minimap.selectionOccurrenceHighlight":"#00000000",
        "minimapGutter.modifiedBackground":"#00000000",
        "minimapGutter.deletedBackground":"#00000000",
        "minimapGutter.addedBackground":"#00000000",

    },

    //explorer
    "editor.detectIndentation": false,
    "editor.guides.indentation": false,
    "workbench.tree.renderIndentGuides": "always",

    // tabs hide
    "workbench.editor.showTabs": "none",
    "window.customTitleBarVisibility": "never",

    // line number
    "editor.lineNumbers": "relative",
    "editor.glyphMargin": false,

    //comman center
    "chat.commandCenter.enabled": false,
    "window.menuBarVisibility": "toggle",
    "workbench.activityBar.location": "hidden",

    // hide scroll
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.stickyScroll.enabled": false,
    "workbench.tree.enableStickyScroll": false,


    // theme
    "workbench.colorTheme": "Just Black",
    "workbench.iconTheme": "catppuccin-latte",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "window.titleBarStyle": "native",
    "breadcrumbs.enabled": false,

    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",
    "editor.minimap.size": "fill",
    "workbench.startupEditor": "none"


}
